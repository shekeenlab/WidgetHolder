<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/layoutCellBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </FrameLayout>

    <CheckBox
        android:id="@+id/checkHookIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_hook_intent"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkShrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_shrink_widget"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textSpacer0"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_weight="1" />

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/buttonAddApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_add_app" />

            <Button
                android:id="@+id/buttonAddShortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_add_shortcut" />
        </LinearLayout>

    </LinearLayout>

<ImageView
    android:id="@+id/imageTrash"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:src="@drawable/trashcan_normal" />

</LinearLayout>
